
<% post.comments.each do |comment| %>
    <div class="media">
      <div class="media-body">
        <p> 
          <%= comment.body %>
        </p>
        <small>
          &raquo; submitted <%= time_ago_in_words(comment.created_at) %> ago by <em><%= comment.user.name %></em>
        </small>
      </div>
    </div>

  <% end %>
